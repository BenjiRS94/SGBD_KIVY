#: import Utils kivy.utils


<LblTxt@BoxLayout>:
    orientation: 'horizontal'      
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
    TextInput:
        id: iAmTxt  
        text: 'txt'        

<LblPss@BoxLayout>:
    orientation: 'horizontal'      
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
    TextInput:
        id: iAmTxt  
        password: True
        text: ''        


<InterfaceManager@BoxLayout>:
    orientation: 'vertical'

    LblTxt:   
        id: lt0
        lblTxtIn: 'User Name'

    LblPss:
        id: lt1
        lblTxtIn: 'Password'

    Button:
        text: 'Sing in'
        on_release: root.show_second(lt0.theTxt.text, lt1.theTxt.text)



<NewObject@BoxLayout>:  
    orientation: 'vertical'

    LblTxt:   
        id: lt0
        lblTxtIn: 'Name Object'

    LblTxt:   
        id: lt1
        lblTxtIn: 'Price Object'

    LblTxt:   
        id: lt2
        lblTxtIn: 'Location Object'


    Button:
        text: 'print LblTxtInput [0, 1, 2]'
        on_release: root.randomFunction(lt0.theTxt.text, lt1.theTxt.text, lt2.theTxt.text)




<AtumObject@BoxLayout>:
    orientation: 'horizontal'
    lblTxtIn: 'default'

    Label:
        text: root.lblTxtIn


<FindObjects@BoxLayout>:
    orientation: 'vertical'

    LblTxt:   
        id: lt0
        lblTxtIn: 'Name Object'

    LblTxt:   
        id: lt1
        lblTxtIn: 'Max Price'

    LblTxt:   
        id: lt2
        lblTxtIn: 'Location'


    Button:
        text: 'print LblTxtInput [0, 1, 2]'
        on_release: root.executeRequest(lt0.theTxt.text, lt1.theTxt.text, lt2.theTxt.text)




<AttributeObject@BoxLayout>:
    
    canvas:
        Color:
            #rgba: (0, 1, 1, 1) # Blue
            rgb: Utils.get_color_from_hex('#66ccff')
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'horizontal'
    lblTxtIn1: 'default'
    lblTxtIn2: 'default'
    Label:
        text: root.lblTxtIn1
    Label:
        text: root.lblTxtIn2 

<Object@BoxLayout>:
    orientation: 'vertical'

    TabbedPanel:
        id: panel
        size_hint: 1, .25
        do_default_tab: False
        canvas:
            Color:
                #rgba: (0, 0, 0, 0) # Black
                rgb: Utils.get_color_from_hex('#0099ff')
            Rectangle:
                size: self.size
                pos: self.pos

    AttributeObject:
        id: lt11
        lblTxtIn1: 'Name Object 1'
        lblTxtIn2: 'Name Object 2'

    AttributeObject:
        id: lt12
        lblTxtIn1: 'Name Object 3'
        lblTxtIn2: 'Name Object 4'

    AttributeObject:
        id: lt13
        lblTxtIn1: 'Name Object 5'
        lblTxtIn2: 'Name Object 6'


